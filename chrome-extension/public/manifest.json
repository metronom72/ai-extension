{
  "manifest_version": 3,
  "name": "BriefCat Extension",
  "version": "1.0",
  "description": "BriefCat extension",
  "permissions": [
    "contextMenus",
    "tabs",
    "storage"
  ],
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "static/js/content.js"
      ]
    }
  ]
}
